{
  "name": "chit-chat",
  "version": "1.0.0",
  "description": "",
  "main": "server/src/index.js",
  "engines": {
    "node": "10.19.0",
    "npm": "6.14.4"
  },
  "scripts": {
    "start": "node server/src/index.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "prettier --check .",
    "format": "prettier --write . && git add -A .",
    "postinstall": "(cd client && npm i)",
    "server": "nodemon server/src/index.js",
    "client": "npm run start --prefix client"
  },
  "pre-commit": [
    "format"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhyusuf/chit-chat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mhyusuf/chit-chat/issues"
  },
  "homepage": "https://github.com/mhyusuf/chit-chat#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.6",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "sequelize": "^6.3.5",
    "sharp": "^0.26.3",
    "socket.io": "^3.0.3",
    "uuid": "^8.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
